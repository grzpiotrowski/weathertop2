<div class="card">
  <div class="content">
    <i class="right floated huge {{icon}} {{colour}} icon"></i>
    <h3 class="ui header">{{title}}</h3>
    <div class="description ui two column grid">
      <div class="column">
        <div class="ui text">
          <div class="ui text"> {{prefixA}} {{valueA}} {{suffixA}}</div>
          <div class="ui text"> {{prefixB}} {{valueB}} {{suffixB}}</div>
          <div class="ui text"> {{prefixC}} {{valueC}} {{suffixC}}</div>
          <div class="ui text"> {{prefixD}} {{valueD}} {{suffixD}}</div>
          <div class="ui text"> {{prefixE}} {{valueE}} {{suffixE}}</div>
        </div>
      </div>
      <div class="column">
        {{#compare trend "===" 1}}
          <i class="right floated big arrow up {{colour}} icon"></i>
        {{/compare}}
        {{#compare trend "===" -1}}
          <i class="right floated big arrow down {{colour}} icon"></i>
        {{/compare}}
      </div>
    </div>
  </div>
</div>